<?xml version="1.0"?>
<layout name="TellTale">
	<window geometry="(50,50,400,400)" name="window" title="Fileselect">
		<table cols="1" rows="4">
			<rowsize row="0" fixed="30"/>
			<rowsize row="1" relative="1"/>
			<rowsize row="2" fixed="30"/>
			<rowsize row="3" fixed="30"/>
			<table col="0" row="0" cols="2" rows="1">
				<colsize col="0" fixed="30"/>
				<colsize col="1" relative="1"/>
				<button col="0" row="0" caption="up"/>
				<edit col="1" row="0" tabindex="1" text="dir...."/>
			</table>
			<table col="0" row="1" cols="2" rows="1">
				<button col="0" row="0" caption="dir-list"/>
				<button col="1" row="0" caption="file-list"/>
			</table>
			<!-- FIXME set some border round this -->
			<edit col="0" row="2" tabindex="0" text="Filename"/>
			<table col="0" row="3" cols="2" rows="1">
				<button col="0" row="0" caption="Cancel"/>
				<button col="1" row="0" caption="Open"/>
			</table>
		</table>
	</window>
</layout>
